<!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot"
        androidPlot.domainLabel="Time"
        androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.gridLinePaint.color="#000000"
        androidPlot.graphWidget.marginBottom="0dp"
        androidPlot.graphWidget.marginLeft="15dp"
        androidPlot.graphWidget.marginRight="0dp"
        androidPlot.graphWidget.marginTop="0dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.legendWidget.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
        androidPlot.rangeLabel=""
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
        androidPlot.renderMode="use_background_thread"
        androidPlot.title=""
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_column="0"
        android:layout_span="4"
        android:layout_weight="0.2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <!-- Premier bouton-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/button_background_unpressed"
                android:id="@+id/oscMode">

                <TextView
                    android:id="@+id/oscModeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:gravity="top|left"
                    android:text="AUTO"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:id="@+id/oscModeLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/oscModeLine2"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/oscModeLine3"
                    android:textColor="@color/button_text_color" />

            </TableLayout>


            <!--Deuxieme bouton-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/button_background_unpressed"
                android:id="@+id/trig">

                <TextView
                    android:id="@+id/trigTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:gravity="top|left"
                    android:text="Trigger"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:id="@+id/trigLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/trigLine2"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/trigLine3"
                    android:textColor="@color/button_text_color" />

            </TableLayout>

            <!--Troisième bouton-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/button_background_unpressed"
                android:id="@+id/timeBase">

                <TextView
                    android:id="@+id/timeBaseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:gravity="top|left"
                    android:text="TimeBase"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:id="@+id/timeBaseLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/timeBaseLine2"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/timeBaseLine3"
                    android:textColor="@color/button_text_color" />

            </TableLayout>

            <!--Quatrième bouton-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/button_background_unpressed"
                android:id="@+id/chan1">

                <TextView
                    android:id="@+id/chan1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:gravity="top|left"
                    android:text="C1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:id="@+id/chan1Line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/chan1Line2"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/chan1Line3"
                    android:textColor="@color/button_text_color" />

            </TableLayout>

            <!--Cinquième bouton-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/button_background_unpressed"
                android:id="@+id/chan2">

                <TextView
                    android:id="@+id/chan2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:gravity="top|left"
                    android:text="C2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:id="@+id/chan2Line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/chan2Line2"
                    android:textColor="@color/button_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:textSize="10sp"
                    android:id="@+id/chan2Line3"
                    android:textColor="@color/button_text_color" />

            </TableLayout>


        </TableRow>

    </TableLayout>


</LinearLayout>


    <!--</FrameLayout>-->


