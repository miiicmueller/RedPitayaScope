<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        // Support library compatibility
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorAccent">#2196F3</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listSeparatorTextViewStyle">@style/AppTheme.ListSeparatorTextView</item>
    </style>

    <!-- ACTION BAR STYLES -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="AppTheme.ListSeparatorTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/accent_selector</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <drawable name="actionbar_background">#aa2196F3</drawable>
    <color name="button_background_unpressed">#aa2196F3</color>
    <color name="button_background_focused">#aa5bb5fc</color>
    <color name="button_fab_menu">#1976d2</color>
    <color name="button_background_pressed">#aa076cbc</color>
    <color name="button_text_color">#000000</color>
    <color name="accent">#2196F3</color>
    <color name="single_shot_bnt_wait">#ff0004</color>
    <color name="single_shot_bnt_normal">#2196F3</color>


    <color name="channel1_color">#feffff00</color>
    <color name="channel2_color">#feff0040</color>
    <color name="channel_nenable_color">#000000</color>


</resources>
